<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<configuration debug="false">

    <property name="applicationName" value="zyeeda-erp-1.0" />

    <contextName>${applicationName}</contextName>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %logger.%M [%t] - %m%n
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/zyeeda-erp.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/zyeeda-erp_%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %logger.%M [%t] - %m%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO" />
    <logger name="org.hibernate" level="INFO" />
    <logger name="org.eclipse" level="INFO" />
    <logger name="org.eclipse.jetty" level="INFO" />
    <logger name="org.quartz" level="INFO" />
    <logger name="bitronix.tm" level="INFO" />
    <logger name="org.enhydra" level="INFO" />
    <logger name="org.objectweb" level="INFO" />
    <logger name="org.hibernate.engine.transaction.internal" level="OFF" />
    <logger name="org.apache.shiro.web.filter" level="TRACE" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>
